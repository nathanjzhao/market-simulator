{
  "name": "market-simulator",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "scripts": {
    "prepare": "yarn install; yarn workspaces foreach run prepare",
    "dev": "yarn workspaces foreach -Api run dev",
    "build": "yarn workspaces foreach -Api run build",
